		ТабличнаяЧастьЗаполнить = Новый Массив;
		ОбъектЗаполнить.Вставить(ИмяТЧ, ТабличнаяЧастьЗаполнить);
		
	КонецЕсли;
	
	СтрокаНайденаВТЧ	= Ложь;
	МодульОбъектаСервер	= МодульОбъектаСервер();
	// Поиск строк в массиве TODO Переделать на временные таблицы запросом. Временно решение перебором!
