				СбисКонтекст.СтрокиКУдалению.Вставить(ИмяТЧ, НаборСтрокУдалить);
				
			КонецЕсли;
			НаборСтрокУдалить.Добавить(СбисКонтекст.СтрокаФайла.НомерСтрокиТЧ);
			
		КонецЕсли;
		
		Возврат;
		
