		//	
		//	МенеджерВременногоПоискаТаблиц = Новый МенеджерВременныхТаблиц;
		//	МодульОбъектаСервер.ПоместитьОбъектВоВременнуюТаблицу(МенеджерВременногоПоискаТаблиц, ТабличнаяЧастьЗаполнить);
		//	
		//КонецЕсли;
		// Нужно внести изменение в строку документа
		УзелПоиск			= Неопределено;
		КлючиПоискаРазбить	= СтрЗаменить(КлючПоискаСтроки, ",", Символы.ПС);
		СтруктураПоиска		= Новый Структура;
		Для НомерСтроки = 1 По СтрЧислоСтрок(КлючиПоискаРазбить) Цикл
			
			КлючПоиска				= СтрПолучитьСтроку(КлючиПоискаРазбить, НомерСтроки);
			Если Не СбисКонтекст.Ини.Свойство(КлючПоиска, УзелПоиск) Тогда
				
				// Криво указан узел поиска, выходим
				Возврат;
				
			КонецЕсли;
			КлючДляСтруктуры		= Сред(УзелПоиск.Значение, Найти(УзелПоиск.Значение, ".") + 1);
			ЗначениеДляСтруктуры	= МодульОбъектаСервер.РассчитатьЗначениеСервер(КлючПоиска, СбисКонтекст);
			СтруктураПоиска.Вставить(КлючДляСтруктуры, ЗначениеДляСтруктуры);
			
		КонецЦикла;
		
		Для ИндексСтрокиТЧ = 0 По ТабличнаяЧастьЗаполнить.Количество() - 1 Цикл
			
			СтрокаНайденаВТЧ = Истина;
			Для Каждого КлючИЗначениеПоиск Из СтруктураПоиска Цикл
				
				Если ТабличнаяЧастьЗаполнить[ИндексСтрокиТЧ][КлючИЗначениеПоиск.Ключ] = КлючИЗначениеПоиск.Значение Тогда 
					
					Продолжить;
					
				КонецЕсли;
				
				СтрокаНайденаВТЧ = Ложь;
				Прервать;
				
			КонецЦикла;
			
			Если СтрокаНайденаВТЧ Тогда
				
				Прервать;
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если СтрокаНайденаВТЧ Тогда
		
		ЗаполнитьЗначенияСвойств(ТабличнаяЧастьЗаполнить[ИндексСтрокиТЧ], СтрокаТЧЗаполнить);
		
	Иначе
		
     	ТабличнаяЧастьЗаполнить.Добавить(СтрокаТЧЗаполнить);
		
	КонецЕсли;
	
КонецПроцедуры

