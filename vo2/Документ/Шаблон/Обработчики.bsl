		// Строка уже расчитана от ТЧ объекта и не нуждается в заполнении
		Возврат;
		
	Иначе
			
		ПутьКТаблице		= СтрЗаменить(СтрЗаменить(СтрЗаменить(ТекущийУзелИни.Значение, 
										"]", ""),
										"[", ""),
										".", Символы.ПС);
		ОбъектЗаполнить = СбисКонтекст.ДанныеРезультат[СтрПолучитьСтроку(ПутьКТаблице, 1)];
	
