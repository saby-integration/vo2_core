
&НаКлиенте
Процедура СоздатьКонтрагента(Команда)
	// процедура создает нового контрагента и открывает его карточку	
	Попытка
		Контрагент1С = СоздатьКонтрагентаНаСервере();
	Исключение
		МодульОбъектаКлиент().СообщитьСбисИсключение(ИнформацияОбОшибке(), "ФормаСозданияКонтрагента.СоздатьКонтрагента");
		Возврат
	КонецПопытки;
	ЭтаФорма.Закрыть(); 

	Если МодульОбъектаКлиент().ПолучитьЗначениеФичи("РасширенныйФункционалСопоставленияНоменклатуры") Тогда
		ФормаПросмотра = ВладелецФормы.СбисПолучитьФорму("ФормаПросмотрДокументаРасширенноеСопоставление");
	Иначе
		ФормаПросмотра = ВладелецФормы.СбисПолучитьФорму("ФормаПросмотрДокумента");
	КонецЕсли;
	
	ФормаПросмотра.ЗаполнитьТаблицуДокументов(ФормаПросмотра.СоставПакета);
	#Если ТолстыйКлиентОбычноеПриложение Тогда
		ОткрытьЗначение(Контрагент1С);
	#Иначе
		ПоказатьЗначение(Неопределено, Контрагент1С);
	#КонецЕсли
КонецПроцедуры

