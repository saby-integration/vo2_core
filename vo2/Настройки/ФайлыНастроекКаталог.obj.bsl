		КонецЕсли;	
	КонецЕсли;
	
	Если ТипЗнч(РезультатЗапроса) = Тип("Структура") И РезультатЗапроса.Свойство(НазваниеXSLT) Тогда
		РезультатЗапроса = РезультатЗапроса[НазваниеXSLT];
	ИначеЕсли Не Отказ Тогда
		РезультатЗапроса = "";
	Иначе
		// Отказ, возвращаем ошибку
	КонецЕсли;

	Возврат РезультатЗапроса;

