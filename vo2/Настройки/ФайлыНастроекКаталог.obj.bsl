		Сообщить("Создан архив настроек ("+ПолноеИмяАрхиваНастроек+")");
	Исключение
		Отказ = Истина;
		Возврат Новый Структура("code,details", 772, ОписаниеОшибки());
	КонецПопытки;
	Возврат Истина;
